<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CESActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#B2EBF4"
        android:padding="16dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ces_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"></ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CSE-D 우울증 자가검사"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="아래의 항목과 같은 일들이 지난 일주일동안\n얼마나 자주 일어났는지 체크해주세요."
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ques_scroll"
        android:layout_marginTop="120dp"


        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ques16"
        android:orientation="vertical"

        >
        <include layout="@layout/test_ques"
            android:id="@+id/q1" />
        <include layout="@layout/test_ques"
            android:id="@+id/q2"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q3"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q4" />
        <include layout="@layout/test_ques"
            android:id="@+id/q5"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q6"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q7" />
        <include layout="@layout/test_ques"
            android:id="@+id/q8"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q9"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q10" />
        <include layout="@layout/test_ques"
            android:id="@+id/q11"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q12"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q13" />
        <include layout="@layout/test_ques"
            android:id="@+id/q14"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q15"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q16"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q17"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q18" />
        <include layout="@layout/test_ques"
            android:id="@+id/q19"/>
        <include layout="@layout/test_ques"
            android:id="@+id/q20"/>
       <Button
            android:id="@+id/ces_res"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="결과 확인"
            android:backgroundTint="#AD8EDB"
            android:textColor="@color/white"
            android:textSize="20dp"
            />


    </LinearLayout>


    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>